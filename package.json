{
  "name": "workflow",
  "version": "1.0.0",
  "description": "Starter kit for JavaScript/TypeScript standard development workflow",
  "main": "index.js",
  "repository": "https://github.com/shaho/workflow.git",
  "author": "Shaho Toofani <toofani@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --out-dir dist",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "yarn check-format && yarn lint && yarn build"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "prettier": "^1.19.1"
  }
}
